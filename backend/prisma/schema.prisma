datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Usuario {
  id        Int      @id @default(autoincrement())
  nombre    String
  email     String   @unique
  password  String
  rol       Rol      @default(USER)
  createdAt DateTime @default(now())

  clientes  Cliente[] // relaciÃ³n con los clientes que creÃ³ (si es admin)
}

model Cliente {
  id           Int      @id @default(autoincrement())
  nombre       String
  email        String   @unique   // ðŸ‘ˆ AgregÃ¡ esto
  telefono     String
  fechaInicio  DateTime
  fechaFin     DateTime
  pagado       Boolean
  notificado   Boolean   @default(false)
  creadoPor    Int
  admin        Usuario   @relation(fields: [creadoPor], references: [id])
}


enum Rol {
  ADMIN
  USER
}

