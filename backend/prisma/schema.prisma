datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Usuario {
  id        Int      @id @default(autoincrement())
  nombre    String
  email     String   @unique
  password  String
  rol       Rol      @default(USER)
  createdAt DateTime @default(now())

  clientes  Cliente[] // relación con los clientes que creó (si es admin)
}

model Cliente {
  id         Int      @id @default(autoincrement())
  nombre     String
  email      String   @unique
  telefono   String?
  fechaInicio DateTime @default(now())
  fechaFin   DateTime?
  pagado     Boolean   @default(false)
  creadoPor  Int       // id del admin que lo creó
  admin      Usuario   @relation(fields: [creadoPor], references: [id])
}

enum Rol {
  ADMIN
  USER
}

